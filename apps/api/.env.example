# ===[APP]==========================================================================================
NODE_ENV=development
APP_NAME=hss-api
APP_HOST=0.0.0.0
APP_PORT=5000
APP_URL=https://api.hss.local
CORS_ORIGIN=https://hss.local
DATABASE_URL="postgresql://hss:rootsecret@localhost:5432/hss?schema=public"                # <<< [!]

# ===[KEYCLOAK | REALM / ISSUER]====================================================================
KEYCLOAK_REALM=hss
KEYCLOAK_ISSUER=https://auth.hss.local/realms/hss
KEYCLOAK_JWKS_URL=https://auth.hss.local/realms/hss/protocol/openid-connect/certs
KEYCLOAK_AUDIENCE=hss-web

# ===[KEYCLOAK | CLIENT (M2M OPTIONAL)]============================================================
KEYCLOAK_API_CLIENT_ID=hss-api
KEYCLOAK_API_CLIENT_SECRET="CHANGE_ME_USE_KEYCLOAK_HSS_API_CLIENT_SECRET"                  # <<< [!]
KEYCLOAK_TOKEN_URL=https://auth.hss.local/realms/hss/protocol/openid-connect/token

# ===[SECURITY / RUNTIME]===========================================================================
TRUST_PROXY=true

# ===[EOF @file: apps/api/.env]=====================================================================